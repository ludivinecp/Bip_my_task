<%=form_for(@task) do |t|%>
  <%= t.label "Event's name" %>
  <%= t.text_field :name %>
  <%= t.label "Date" %>
	<%= t.date_field :start_time %>
  <%= t.label "Hour" %>
  <%= t.time_field :hour %>
  <%= t.label "Place" %>
  <%= t.text_field :place %>
  <%= t.label "Description" %>
  <%= t.text_area :description %>
  <%= t.hidden_field :user_id, :value => current_user.id %>
 
  <%= t.submit "Submit"  %> 
  <%end%>